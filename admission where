// 1ï¸âƒ£ Create / Use Database
use AdmissionDB

// 2ï¸âƒ£ Create and Insert Documents
db.Admission.insertMany([
  { AdmNo: 101, name: "Aarav", course: "B.Tech", year: 2023, fees: 50000, subjects: ["Maths", "Physics"], scholarship: true },
  { AdmNo: 102, name: "Isha", course: "MBA", year: 2024, fees: 65000, subjects: ["Finance", "Marketing"], scholarship: false },
  { AdmNo: 103, name: "Rohan", course: "BCA", year: 2023, fees: 45000, subjects: ["Programming", "Maths"], scholarship: true },
  { AdmNo: 104, name: "Diya", course: "MCA", year: 2024, fees: 70000, subjects: ["AI", "DBMS"], scholarship: null },
  { AdmNo: 105, name: "Arjun", course: "B.Tech", year: 2025, fees: 55000, subjects: ["Electronics", "Maths"], scholarship: false }
])

// ----------------------
// ðŸ”Ž 10 Example Queries
// ----------------------

// 1ï¸âƒ£ Find all students
db.Admission.find()

// 2ï¸âƒ£ Find one student by name
db.Admission.findOne({ name: "Aarav" })

// 3ï¸âƒ£ Find students with fees greater than 50000
db.Admission.find({ fees: { $gt: 50000 } })

// 4ï¸âƒ£ Find students admitted in 2023 or 2024
db.Admission.find({ $or: [ { year: 2023 }, { year: 2024 } ] })

// 5ï¸âƒ£ Find students not in course "MBA"
db.Admission.find({ course: { $not: { $eq: "MBA" } } })

// 6ï¸âƒ£ Find students whose scholarship field is NULL
db.Admission.find({ scholarship: null })

// 7ï¸âƒ£ Find students whose name starts with 'A' (Regular Expression)
db.Admission.find({ name: { $regex: /^A/, $options: "i" } })

// 8ï¸âƒ£ Find students having "Maths" in their subjects array
db.Admission.find({ subjects: "Maths" })

// 9ï¸âƒ£ Find students with array containing both "AI" and "DBMS"
db.Admission.find({ subjects: { $all: ["AI", "DBMS"] } })

// ðŸ”Ÿ $where query â€” find students where fees > 55000
db.Admission.find({ $where: function() { return this.fees > 55000; } })
